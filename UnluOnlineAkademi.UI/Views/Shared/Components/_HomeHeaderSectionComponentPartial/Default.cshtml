@model List<HomeHeaderDto>

@{
    // arkaplan için ilk header’ı seçelim
    var coverImage = Model.FirstOrDefault()?.CoverImage ?? "/images/default.png";
}

<style>
    .home_bg {
        background-image: url('@Url.Content(coverImage)');
    }
</style>

<section id="home" class="home_bg">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-12 text-center">
                    <div class="home_content">
                        <h1>@Html.Raw(item.Slogan)</h1>
                        <p>@item.Desc</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>