@model UnluOnlineAkademi.UI.DTOs.StudentTestimonialDto.CreateStudentTestimonialDto
@{
    ViewData["Title"] = "AddStudentTestimonials";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- STYLESHEETS -->
<link href="~/admin-template/assets/plugins/datepicker/css/datepicker.css" rel="stylesheet" type="text/css" media="screen" />

<section id="main-content">
    <section class="wrapper main-wrapper">

        <div class="col-12">
            <div class="page-title">
                <div class="float-left">
                    <h1 class="title">Yeni Öğrenci Yorumu Ekle</h1>
                </div>
                <div class="float-right">
                    <ol class="breadcrumb">
                        <li><a href="/Admin/Dashboard/Index"><i class="fa fa-home"></i> Dashboard</a></li>
                        <li><a href="/Admin/Home/Index"> /Ana Sayfa</a></li>
                        <li class="active"><strong> /Yeni Yorum</strong></li>
                    </ol>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>


        <div class="col-12">
            <section class="box">
                <header class="panel_header">
                    <h2 class="title float-left">Öğrenci Yorumları</h2>
                </header>
                <div class="content-body">
                    <form class="form" id="student2" method="post" asp-action="AddStudentTestimonials" asp-controller="Home" asp-area="Admin">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label" for="">Öğrenci İsim</label>
                                    <input type="text" class="form-control" asp-for="Name" name="Name" required>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label" for="">Öğrenci Soyisim</label>
                                    <input type="text" class="form-control" asp-for="Surname" name="Surname" required>
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="form-group">
                                    <label class="form-label" for="">Katıldığı Eğitim</label>
                                    <input type="text" class="form-control" asp-for="Education" name="Education" required>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-label" for="">Öğrenci Yorumu</label>
                                    <textarea class="form-control" asp-for="Testimonial" name="Testimonial" rows="10" required></textarea>
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="form-group">
                                    <label class="form-label" for="">Puan</label>
                                    <select class="form-control" asp-for="Rate" name="Rate" required>
                                        <option value="">Puan Seçiniz</option>
                                        <option value="1">1 - Çok Kötü</option>
                                        <option value="2">2 - Kötü</option>
                                        <option value="3">3 - Orta</option>
                                        <option value="4">4 - İyi</option>
                                        <option value="5">5 - Mükemmel</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="text-left mt-3">
                                    <button type="submit" class="btn btn-success">Kaydet</button>
                                    <a href="/Admin/StudentTestimonials/Index" class="btn btn-danger">İptal</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
        </div>
    </section>

</section>

<!-- JS SCRIPTS -->
    <script src="~/admin-template/assets/plugins/datepicker/js/datepicker.js"></script>
    <script src="~/admin-template/assets/plugins/autosize/autosize.min.js"></script>
    <script src="~/admin-template/assets/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
    <script src="~/admin-template/assets/plugins/ckeditor/ckeditor.js"></script>

<script>
    $(document).ready(function() {
        // CKEditor'ı başlat
        CKEDITOR.replace('Testimonial');
    });

    $('#student2').on('submit', function (e) {
        // CKEditor içeriğini güncelle
        for (instance in CKEDITOR.instances) {
            CKEDITOR.instances[instance].updateElement();
        }
    });
</script>