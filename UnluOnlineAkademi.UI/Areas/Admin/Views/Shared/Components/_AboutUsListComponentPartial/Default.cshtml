@model List<AboutUsByIdDto>
<div class="col-xl-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title float-left">Hakkımızda</h2>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-12">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th style="text-align: left;">Başlık</th>
                                <th style="text-align: left;">İçerik</th>
                                <th style="text-align: right;">Düzenle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">1</th>
                                    <td style="text-align: left;">@item.Title</td>
                                    <td style="text-align: left;">@Html.Raw(item.Desc)</td>
                                    <td style="text-align: right;"><a href="/Admin/AboutUS/EditAboutUs"><i style="font-size: 20px !important;" class="fa fa-pencil text-warning"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>