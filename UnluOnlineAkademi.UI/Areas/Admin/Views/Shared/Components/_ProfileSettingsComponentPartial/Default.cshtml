<div class="col-xl-12 col-lg-12 col-12 col-md-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title float-left">Profil Bilgileri</h2>
            <div class="actions panel_actions float-right">
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <form action="#" method="post">

                    <div class="d-flex flex-column align-items-center justify-content-center text-center" style="min-height: 300px;">
                        <!-- Profil Görseli -->
                        <div class="mb-3">
                            <img src="~/admin-template/data/profile/user.png" alt="Profil"
                                 class="rounded-circle"
                                 style="width: 120px; height: 120px; object-fit: cover;">
                        </div>

                        <!-- Dosya Yükleme Alanı -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label" for="field-5">Profil Fotoğrafı Yükle</label>
                                <input type="file" class="form-control text-center" id="field-5">
                            </div>
                        </div>
                    </div>



                    <div class="col-xl-12 col-lg-8 col-md-9 col-12 padding-bottom-30">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label" for="first-name">İsim</label>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="first-name">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label" for="last-name">Soyisim</label>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="last-name">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label" for="last-name">Kullanıcı Adı</label>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="last-name">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-12 col-lg-8 col-md-9 col-12 padding-bottom-30">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" for="first-name">Şifre</label>
                                    <div class="controls">
                                        <input type="password" class="form-control" id="first-name">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label" for="last-name">Şifre Tekrar</label>
                                    <div class="controls">
                                        <input type="password" class="form-control" id="last-name">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-8 col-lg-8 col-md-9 col-12 padding-bottom-30">
                        <div class="text-left">
                            <button type="button" class="btn btn-success">Kaydet</button>
                            <button type="button" class="btn btn-danger">İptal </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
