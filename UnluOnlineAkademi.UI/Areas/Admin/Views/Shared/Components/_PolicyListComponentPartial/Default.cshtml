@model List<PoliciesByIdDto>

@{
    int counter = 1;
}

<div class="col-xl-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title float-left">Politikalar</h2>
            <div class="actions panel_actions float-right">
                <a href="/Admin/Policy/AddPolicy" class="btn btn-success"><i style="color:white;" class="fa fa-plus"></i>Yeni Politika Ekle</a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-12">

                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th style="text-align: left;">Başlık</th>
                                <th style="text-align: right;">Düzenle</th>
                                <th style="text-align: right;">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td style="text-align: left;">@item.Title</td>
                                    <td style="text-align: right;"><a href="/Admin/Policy/EditPolicy"><i style="font-size: 20px !important;" class="fa fa-pencil text-warning"></i></a></td>
                                    <td style="text-align: right;"><a href="#"><i style="font-size: 20px !important;" class="fa fa-eraser text-danger"></i></a></td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>